<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="Carina Demo Tests - Rozetka Web" parallel="tests" thread-count="4">

    <parameter name="suiteOwner" value="oshcherbina"/>

    <test name="Check brand test">
        <classes>
            <class name="com.qaprosoft.carina.demo.rozetka.RozetkaWebTest">
                <methods>
                    <include name="testVerifyCheckBrand"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Check sort low to high test">
        <classes>
            <class name="com.qaprosoft.carina.demo.rozetka.RozetkaWebTest">
                <methods>
                    <include name="testSortLowToHigh"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Verify brand check title and sum test">
        <classes>
            <class name="com.qaprosoft.carina.demo.rozetka.RozetkaWebTest">
                <methods>
                    <include name="testVerifyBrandCheckTitleAndSum"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Compare products test">
        <classes>
            <class name="com.qaprosoft.carina.demo.rozetka.RozetkaWebTest">
                <methods>
                    <include name="testCompareProducts"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Check reviews for date test">
        <classes>
            <class name="com.qaprosoft.carina.demo.rozetka.RozetkaWebTest">
                <methods>
                    <include name="testCheckReviewsForDate"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Check device type and footer menu test">
        <classes>
            <class name="com.qaprosoft.carina.demo.rozetka.RozetkaWebTest">
                <methods>
                    <include name="testCheckDeviceTypeAndFooterMenu"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Verify hamburger menu test">
        <classes>
            <class name="com.qaprosoft.carina.demo.rozetka.RozetkaWebTest">
                <methods>
                    <include name="testVerifyHamburgerMenu"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Add and delete items from basket test">
        <classes>
            <class name="com.qaprosoft.carina.demo.rozetka.RozetkaWebTest">
                <methods>
                    <include name="testAddAndDeleteItemsFromBasket"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Verify login form test">
        <classes>
            <class name="com.qaprosoft.carina.demo.rozetka.RozetkaWebTest">
                <methods>
                    <include name="testVerifyLoginForm"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>